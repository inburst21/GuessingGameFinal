<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rodneytressler.guessinggamefinal">

  <application
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
    <!--we're locking screen orientation to portraint so it doesn't look bad when turned sideways.-->
    <activity android:name=".MainActivity"
        android:screenOrientation="portrait">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <!--Here we're naming our new, Winner Activity.-->
    <!--We set it to portrait so the app stays ok when it's turned sideways-->
    <activity android:name=".WinnerActivity"
        android:screenOrientation="portrait">

    </activity>
    <activity android:name="com.company.guessinggamefinal.MainActivity" />
  </application>

</manifest>